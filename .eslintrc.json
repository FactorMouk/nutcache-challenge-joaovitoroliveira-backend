{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": [
        "prettier",
        "google"
    ],
    "plugins": [
        "prettier"
    ],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "linebreak-style": ["error", "windows"],
        "object-curly-spacing": ["error", "always"],
        "space-before-function-paren": ["error", "always"],
        "prettier/prettier": ["error", {
            "endOfLine": "auto"
          }
        ]
    }
}

